// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// Enums
//
enum Role {
  ADMIN
  HOD
  STAFF
}

enum ExpenseStatus {
  PENDING
  APPROVED
  REJECTED
}

//
// NextAuth adapter models
//
model User {
  id                String   @id @default(cuid())
  name              String?
  email             String?  @unique
  emailVerified     DateTime?
  image             String?
  role              Role     @default(STAFF)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  accounts          Account[]
  sessions          Session[]

  // Domain relations
  budgets           Budget[]        @relation("UserBudgets")
  expensesCreated   Expense[]       @relation("ExpenseCreatedBy")
  expensesApproved  Expense[]       @relation("ExpenseApprovedBy")
  auditLogs         AuditLog[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

//
// Domain models
//
model Budget {
  id         String    @id @default(cuid())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  // Academic/financial tracking
  year       Int
  proposed   Decimal   @db.Decimal(14,2)
  allotted   Decimal   @db.Decimal(14,2)
  variance   Decimal   @db.Decimal(14,2)

  // Owner/creator of the budget record
  createdById String?
  createdBy   User?     @relation("UserBudgets", fields: [createdById], references: [id], onDelete: SetNull)

  // Relations
  categories  Category[]
  expenses    Expense[]  // <-- back relation to Expense.budget

  @@index([year])
}

model Category {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  name        String
  description String?
  allocated   Decimal   @db.Decimal(14,2)

  budgetId    String
  budget      Budget    @relation(fields: [budgetId], references: [id], onDelete: Cascade)

  expenses    Expense[]

  @@index([budgetId])
  @@unique([budgetId, name])
}

model Expense {
  id               String        @id @default(cuid())
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  title            String
  description      String?
  amount           Decimal       @db.Decimal(14,2)
  date             DateTime
  vendor           String?
  activity         String?

  status           ExpenseStatus @default(PENDING)

  // Relations to Category and Budget
  categoryId       String
  category         Category      @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  budgetId         String
  budget           Budget        @relation(fields: [budgetId], references: [id], onDelete: Cascade)

  // Creator and approver relations
  createdById      String?
  createdBy        User?         @relation("ExpenseCreatedBy", fields: [createdById], references: [id], onDelete: SetNull)

  approvedById     String?
  approvedBy       User?         @relation("ExpenseApprovedBy", fields: [approvedById], references: [id], onDelete: SetNull)

  approvedAt       DateTime?

  // Receipt storage via Cloudinary
  receiptUrl       String?
  receiptPublicId  String?

  auditLogs        AuditLog[]

  @@index([budgetId])
  @@index([categoryId])
  @@index([status])
  @@index([date])
}

model AuditLog {
  id          String    @id @default(cuid())
  timestamp   DateTime  @default(now())

  actorId     String?
  actor       User?     @relation(fields: [actorId], references: [id], onDelete: SetNull)

  action      String
  entityType  String
  entityId    String
  metadata    Json?
}
